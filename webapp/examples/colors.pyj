def filter(value):
    for item in all.children:
        if value.lower() in item.dataset.Name.lower():
            item.style.display = ''
        else:
            item.style.display = 'none'
    return False

def switchtitle(event):
    name = event.target.dataset.Name
    title.textContent = 'ðŸ’™' + name
    title.style.color = name.replace(/\s/g, '')

title = print ('ðŸ’™ Colores', tag='h1')
search = inputAsync(filter)
search.placeholder = 'ðŸ’™'
search.style.borderRadius = '9px'
search.style.fontFamily = 'Noto Emoji, Noto Mono'
search.style.padding = '3px'
search.style.marginBottom = '15px'
search.onkeyup = def(event):
    filter(event.target.value)
showcase = print ()
showcase.style.overflowY = 'auto'
showcase.style.textAlign = 'center'
showcase.style.width = '100%'
showcase.style.fontSize = '40pt'
showcase.style.wordBreak = 'break-all'

all = document.createElement('span')
for item in names:
    palette = document.createElement('span')
    palette.textContent = 'ðŸ’™'
    palette.dataset.Name = item
    palette.style.padding = '7px'
    palette.style.color = item
